<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/golden_yellow"
    tools:context=".SigninActivity">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

    <include layout="@layout/layout_headar_img">
    </include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/clanpro_book"
            android:text="SIGN IN"
            android:textColor="@color/black"
            android:textSize="24dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_below="@id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<LinearLayout
                android:id="@+id/llMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_selected_rounded"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/email_signin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/silverDark"/>
</LinearLayout>


        <LinearLayout
            android:id="@+id/llMobile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_selected_rounded"
            android:orientation="vertical">



            <EditText
                android:id="@+id/pwd_signin"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:textColor="@color/silverDark"/>

        </LinearLayout>



        <TextView
            android:id="@+id/txt_forgotpwdpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/bLogin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/signin_back"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/maderabold"
            android:text="Sign In"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="16sp"
            android:shadowColor="@color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            />


        <TextView
            android:id="@+id/txt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="@string/txt_newuser"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textColor="@color/black" />


    </LinearLayout>
    </ScrollView>


</RelativeLayout>