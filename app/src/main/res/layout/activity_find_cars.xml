<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindCars">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backFromFindCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/sultannahya"
                android:text="@string/txt_findcar"
                android:textColor="@color/black"
                android:textSize="36dp" />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edtextfind_back"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="12dp"
                android:hint="Type a city or airport name"
                android:paddingStart="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/darkslate"
                android:textSize="13sp">
            </EditText>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edtextfind_back"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="12dp"
                android:hint="Type a city or airport name"
                android:paddingStart="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/darkslate"
                android:textSize="13sp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/sultannahya"
                android:text="RENTAL START"
                android:textColor="@color/black"
                android:textSize="14sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtStartDate"
                    android:layout_width="130dp"
                    android:layout_height="40dp"

                    android:layout_marginTop="15dp"
                    android:background="@drawable/edtextfind_back"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter Date"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkslate"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/edtStartTime"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edtextfind_back"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter Time"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkslate"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/sultannahya"
                android:text="RENTAL END"
                android:textColor="@color/black"
                android:textSize="14sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtEndDate"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edtextfind_back"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter Date"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkslate"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/edtEndTime"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edtextfind_back"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter Time"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkslate"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_FindCar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="36dp"
                android:background="@color/golden_yellow"
                android:fontFamily="@font/sultannahya"
                android:gravity="center"
                android:text="FIND CAR"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>