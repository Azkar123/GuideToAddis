<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CancelledFragment">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showing Cancelled Rides"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="18dp"
        android:fontFamily="@font/moderamedium"
        >
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="24dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_locFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_place_24"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_locFrom"
            android:text="Lutiyans Zone"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp">
        </TextView>

        <TextView
            android:id="@+id/txt_TripDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 OCT 2020"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/vertical_View"
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_below="@+id/icon_locFrom"
            android:layout_marginStart="27dp"
            android:background="@drawable/view_background"

            >
        </View>

        <ImageView
            android:id="@+id/icon_NearMe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_nearme"
            android:layout_marginStart="16dp"
            android:layout_below="@id/vertical_View"
            >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_NearMe"
            android:layout_below="@id/vertical_View"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:text="Home">
        </TextView>


        <RatingBar
            android:id="@+id/ratingBar3"
            android:layout_below="@+id/txt_TripDate"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/golden_yellow"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:rating="3"
            style="@style/Widget.AppCompat.RatingBar.Small"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2.94"
            android:textColor="@color/darkslate"
            android:layout_below="@id/ratingBar3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            >
        </TextView>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>