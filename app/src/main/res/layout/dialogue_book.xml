<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/icon_Confirm"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>


     <TextView
         android:id="@+id/txt_BookingConfirm"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Booking Complete!"
         android:textSize="24sp"
         android:gravity="center"
         android:layout_marginTop="12dp"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/icon_Confirm"
         android:textColor="@color/color_check"
         android:fontFamily="@font/poppins_medium"
         />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_BookingConfirm"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="15sp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car"
            android:layout_marginStart="24dp"
            android:textColor="@color/silverDark"
            >
        </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nissan Versa"
                android:layout_marginStart="24dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup and Return"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:textColor="@color/silverDark"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="780, McDonnell Rd, India"
                android:layout_marginStart="24dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Dates"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:textColor="@color/silverDark"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue, 12Feb, 10:00AM - Fri, 15 Feb 20:00 PM"
                android:layout_marginStart="24dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : $250"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="24dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                >
            </TextView>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cardSummary"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/paybtnbackground"
        android:gravity="center"
        android:text="Finish"
        android:layout_marginStart="24dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold">
    </TextView>



</RelativeLayout>